{
  "name": "accessible-video-player",
  "version": "1.0.0",
  "description": "Konzeption und prototypische Umsetzung eines barrierefreien Web-Video-Players nach WCAG 2.2 Level AA - Bachelorarbeit",
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "dev": "live-server src --port=3000 --open=/",
    "test": "npm run test:unit && npm run test:integration",
    "test:e2e": "playwright test",
    "test:regression": "playwright test tests/e2e/regression.e2e.test.js --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=integration",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage tests/unit tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint --no-error-on-unmatched-pattern src/**/*.js",
    "lint:fix": "eslint --no-error-on-unmatched-pattern src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "prepare": "husky",
    "axe:report": "node scripts/axe-report.js",
    "lighthouse:report": "npx @lhci/cli autorun --collect.url=http://localhost:3000 --collect.numberOfRuns=1"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "wcag-2.2",
    "level-aa",
    "video-player",
    "a11y",
    "bachelorarbeit",
    "web-accessibility"
  ],
  "author": "Simon Kraus <simon.kraus@smail.th-koeln.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skraus2/accessible-video-player.git"
  },
  "overrides": {
    "fsevents": "^2.3.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "live-server": "^1.2.2",
    "prettier": "^3.8.1"
  }
}
